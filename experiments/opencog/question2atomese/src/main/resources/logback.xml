<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
	<target>System.err</target>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="relex" level="INFO" additivity="false">
        <appender-ref ref="STDERR" />
    </logger>

    <logger name="relex.RelationExtractor" level="INFO" additivity="false">
        <appender-ref ref="STDERR" />
    </logger>

    <root level="INFO">
        <appender-ref ref="STDERR" />
    </root>

</configuration>

